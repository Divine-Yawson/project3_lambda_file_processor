pipeline {
  agent any

  environment {
    AWS_REGION = 'us-east-1'
    FUNCTION_NAME = 'FileProcessor' // keep this consistent with your .tf file
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main',
            credentialsId: 'github-credentials',
            url: 'https://github.com/Divine-Yawson/project3_lambda_file_processor.git'
      }
    }

    stage('Terraform Init') {
      steps {
        sh '''
          cd lambda-processor
          terraform init
        '''
      }
    }

    stage('Terraform Plan') {
      steps {
        sh '''
          cd lambda-processor
          terraform plan -out=tfplan
        '''
      }
    }

    stage('Terraform Apply') {
      steps {
        input message: "Approve infrastructure changes?"
        sh '''
          cd lambda-processor
          terraform apply -auto-approve tfplan
        '''
      }
    }

    // Optional Lambda re-deployment stage
    // Uncomment if you want Jenkins to re-zip/upload/update the Lambda function
    /*
    stage('Deploy Lambda') {
      steps {
        sh '''
          cd lambda-processor
          zip lambda.zip lambda_function.py
          aws lambda update-function-code \
            --function-name $FUNCTION_NAME \
            --zip-file fileb://lambda.zip \
            --region $AWS_REGION
        '''
      }
    }
    */
  }

  post {
    success {
      echo 'Infrastructure deployed successfully!'
    }
    failure {
      echo 'Build failed. Check logs above.'
    }
  }
}
