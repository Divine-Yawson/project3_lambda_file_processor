pipeline {
  agent any

  environment {
    AWS_REGION = 'us-east-1'
    S3_BUCKET = '' // Not needed unless you're using AWS CLI to upload manually
    FUNCTION_NAME = 'FileProcessor'
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', credentialsId: 'github-credentials', url: 'https://github.com/Divine-Yawson/project3_lambda_file_processor.git'
      }
    }

    stage('Prepare Lambda Zip') {
      steps {
        sh '''
          cd lambda-processor
          zip lambda.zip lambda_function.py
        '''
      }
    }

    stage('Terraform Init') {
      steps {
        sh '''
          cd lambda-processor
          terraform init
        '''
      }
    }

    stage('Terraform Plan') {
      steps {
        sh '''
          cd lambda-processor
          terraform plan -out=tfplan -input=false
        '''
      }
    }

    stage('Terraform Apply') {
      steps {
        input message: "Approve infrastructure changes?"
        sh '''
          cd lambda-processor
          terraform apply -auto-approve tfplan
        '''
      }
    }
  }

  post {
    failure {
      echo 'Build failed.'
    }
    success {
      echo 'Deployment complete.'
    }
  }
}
