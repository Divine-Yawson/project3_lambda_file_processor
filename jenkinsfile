pipeline {
  agent any

  environment {
    AWS_REGION = 'us-east-1'
    FUNCTION_NAME = 'FileProcessor'
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', credentialsId: 'github-credentials', url: 'https://github.com/Divine-Yawson/project3_lambda_file_processor.git'
      }
    }

    stage('Terraform Init') {
      steps {
        sh '''
          cd lambda-processor
          terraform init
        '''
      }
    }

    stage('Terraform Plan') {
      steps {
        sh '''
          cd lambda-processor
          terraform plan -out=tfplan -input=false
        '''
      }
    }

    stage('Terraform Apply') {
      steps {
        input message: "Approve infrastructure changes?"
        sh '''
          cd lambda-processor
          terraform apply -auto-approve tfplan
        '''
      }
    }

    stage('Get Terraform Output') {
      steps {
        script {
          def bucketName = sh(
            script: "cd lambda-processor && terraform output -raw s3_bucket_name",
            returnStdout: true
          ).trim()
          env.S3_BUCKET = bucketName
          echo "S3 bucket from Terraform: ${env.S3_BUCKET}"
        }
      }
    }

    stage('Upload File to Trigger Lambda') {
      steps {
        sh '''
          cd lambda-processor
          zip test_file.zip lambda_function.py
          aws s3 cp test_file.zip s3://$S3_BUCKET/
        '''
      }
    }
  }

  post {
    success {
      echo '✅ Deployment complete and file uploaded to S3.'
    }
    failure {
      echo '❌ Build failed!'
    }
  }
}
